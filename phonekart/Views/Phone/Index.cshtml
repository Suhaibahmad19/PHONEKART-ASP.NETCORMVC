@model IEnumerable<Phone>
@{
}

<h2>Phones</h2>

<a asp-action="AddPhone" asp-controller="Phone" class="btn btn-primary">Add More</a>

@if(Model?.Count()>0)
{
    <table class="table table-striped my-2">
        <tr>
            <th>Image</th>
            <th>Model</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Action</th>
        </tr>

        @foreach (var phone in Model)
        {
            <tr>
                <td>
                    @if (string.IsNullOrWhiteSpace(phone.Image))
                    {
                        <img src="/Images/NoImage.png" style="width:80px;height:100px" alt="phone image" />
                    }
                    else
                    {
                        <img src="/images/@phone.Image" style="width:80px;height:100px" alt="phone image" />
                    }
                </td>
                <td>@phone.Model</td>
                <td>@phone.Brand.BrandName</td>
                <td>@phone.Price</td>
                <td>
                    <a asp-action="UpdatePhone" asp-controller="Phone" asp-route-id="@phone.Id" class="btn btn-success">Edit</a>
                    <a asp-action="DeletePhone" asp-controller="Phone" asp-route-id="@phone.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No records</h3>
}

