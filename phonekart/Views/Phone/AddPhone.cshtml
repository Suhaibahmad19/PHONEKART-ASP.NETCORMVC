@model PhoneDTO
@{

}
<div style="width:50%">
    <h2> Add Phone </h2>
    <a asp-action="Index" asp-controller="Phone" class="btn btn-primary">Back</a>
    <form asp-action="AddPhone" enctype="multipart/form-data">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Phone*</label>
            <input type="text" class="form-control" asp-for="PhoneName" />
            <span asp-validation-for="PhoneName" class="text-danger"></span>
        </div>


        <div class="my-2">
            <label>Brand*</label>
            <select class="form-control" asp-for="BrandId" asp-items="Model.BrandList">
                <option value="">Select Genre</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
